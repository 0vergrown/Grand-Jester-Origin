{
    "type":"origins:multiple",
    "cooldown":{
       "type":"origins:cooldown",
       "cooldown":100,
       "hud_render":{
          "should_render":true,
          "sprite_location":"origins:textures/gui/resource_bar.png",
          "bar_index":5
       }
    },
    "increase_size":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:trigger_cooldown",
                "power":"grand_jester:jesters_guise_size_change_cooldown"
             },
             {
                "type":"origins:change_resource",
                "resource":"grand_jester:jesters_guise_resource",
                "change":1,
                "operation":"add"
             },
             {
                "type":"origins:change_resource",
                "resource":"grand_jester:jesters_guise_trigger",
                "change":1,
                "operation":"set"
             },
             {
                "type":"origins:delay",
                "action":{
                   "type":"origins:change_resource",
                   "resource":"grand_jester:jesters_guise_trigger",
                   "change":0,
                   "operation":"set"
                },
                "ticks":40
             }
          ]
       },
       "cooldown":1,
       "hud_render":{
          "should_render":false
       },
       "key":{
          "key":"key.saveToolbarActivator",
          "continuous":false
       },
       "condition":{
          "type":"origins:resource",
          "resource":"grand_jester:jesters_guise_size_change_cooldown",
          "comparison":"==",
          "compare_to":0
       }
    },
    "decrease_size":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:trigger_cooldown",
                "power":"grand_jester:jesters_guise_size_change_cooldown"
             },
             {
                "type":"origins:change_resource",
                "resource":"grand_jester:jesters_guise_resource",
                "change":-1,
                "operation":"add"
             },
             {
                "type":"origins:change_resource",
                "resource":"grand_jester:jesters_guise_trigger",
                "change":1,
                "operation":"set"
             },
             {
                "type":"origins:delay",
                "action":{
                   "type":"origins:change_resource",
                   "resource":"grand_jester:jesters_guise_trigger",
                   "change":0,
                   "operation":"set"
                },
                "ticks":40
             }
          ]
       },
       "cooldown":1,
       "hud_render":{
          "should_render":false
       },
       "key":{
          "key":"key.loadToolbarActivator",
          "continuous":false
       },
       "condition":{
          "type":"origins:resource",
          "resource":"grand_jester:jesters_guise_size_change_cooldown",
          "comparison":"==",
          "compare_to":0
       }
    }
}